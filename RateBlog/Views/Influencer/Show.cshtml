@model RateBlog.Models.InfluenterViewModels.ShowViewModel
@inject RateBlog.Repository.IKategoriRepository CategoryRepository
@inject RateBlog.Repository.IPlatformRepository PlatformRepository
@inject RateBlog.Repository.IRatingRepository RatingRepository
@inject RateBlog.Repository.IEkspertRatingRepository EkspertRatingRepository
@{
    ViewData["Title"] = Model.Influenter.Alias + "'s profil";
}

<div style="padding-bottom: 100px;">
    <div class="navbar-allaround"></div>
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div id="showSuc" class="alert fade in alert-success alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                @TempData["Success"]
            </div>

            <script>
                window.setTimeout(function () {
                    $("#showSuc").fadeOut(1000);
                }, 2000);
            </script>
        }

        <div class="col-md-12">
            <img class="profil-img margin-top center-block" src="@Url.Action("UsersProfilePic", "Manage", new { id = Model.ApplicationUser.Id })" />
            <div class="text-center">
                <h2>@Model.ApplicationUser.Name</h2>
                <h3>
                    @if (CategoryRepository.GetInfluentersCategories(Model.ApplicationUser.InfluenterId.Value) != null)
                    {
                        @foreach (var v in CategoryRepository.GetInfluentersCategories(Model.ApplicationUser.InfluenterId.Value))
                        {
                            if (v.Equals(CategoryRepository.GetInfluentersCategories(Model.ApplicationUser.InfluenterId.Value).Last()))
                            {
                                @v
                            }
                            else
                            {
                                @v <span> | </span>
                            }
                        }
                    }
                    else
                    {
                        <span>Ukendte kategorier</span>

                    }

                </h3>

                <hr />
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                @if (RatingRepository.HasRatings(Model.Influenter.InfluenterId) && (EkspertRatingRepository.HasEkspertRatings(Model.Influenter.InfluenterId)))
                {
                    <h3 class="text-center">Følger rating:</h3>

                    <div class="show-rating-box-show">
                        <div class="show-rating-show">
                            <div class="show-rating-front-show">
                                @for (int i = 0; i < RatingRepository.GetRatingAverage(Model.Influenter.InfluenterId); i++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </div>
                            <div class="show-rating-back-show">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-center">Antal ratings: @RatingRepository.CountRatings(Model.Influenter.InfluenterId)</p>

                    <h3 class="text-center" style="margin-top: 30px;">Ekspert rating:</h3>

                    <div class="show-rating-box-show">
                        <div class="show-rating-show">
                            <div class="show-rating-front-show">
                                @for (int i = 0; i < EkspertRatingRepository.GetEkspertRatingAverage(Model.Influenter.InfluenterId); i++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </div>
                            <div class="show-rating-back-show">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>

                    <p class="text-center">Antal ratings: @EkspertRatingRepository.CountEkspertRatings(Model.Influenter.InfluenterId)</p>

                    <a asp-controller="Rating" asp-action="RateInfluencer" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background-color: #08468d ">Giv feedback</a>
                    <a asp-controller="Influencer" asp-action="Read" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background-color:#53b80a">Se feedback</a>

                }
                else if (RatingRepository.HasRatings(Model.Influenter.InfluenterId).Equals(false) && (EkspertRatingRepository.HasEkspertRatings(Model.Influenter.InfluenterId)))
                {
                    <h3 class="text-center" style="margin-top: 30px;">Ekspert rating:</h3>

                    <div class="show-rating-box-show">
                        <div class="show-rating-show">
                            <div class="show-rating-front-show">
                                @for (int i = 0; i < EkspertRatingRepository.GetEkspertRatingAverage(Model.Influenter.InfluenterId); i++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </div>
                            <div class="show-rating-back-show">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-center">Antal ratings: @EkspertRatingRepository.CountEkspertRatings(Model.Influenter.InfluenterId)</p>
                    <br />
                    <h4 class="text-center">Denne influencer har ingen feedback. Bliv den første</h4>
                    <a asp-controller="Rating" asp-action="RateInfluencer" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background: #08468d ">Giv feedback</a>
                    <a asp-controller="Influencer" asp-action="Read" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background-color:#53b80a">Se ekspert feedback</a>


                }
                else if (RatingRepository.HasRatings(Model.Influenter.InfluenterId) && (EkspertRatingRepository.HasEkspertRatings(Model.Influenter.InfluenterId)).Equals(false))
                {
                    <h3 class="text-center">Følger rating:</h3>

                    <div class="show-rating-box-show">
                        <div class="show-rating-show">
                            <div class="show-rating-front-show">
                                @for (int i = 0; i < RatingRepository.GetRatingAverage(Model.Influenter.InfluenterId); i++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </div>
                            <div class="show-rating-back-show">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-center">Antal ratings: @RatingRepository.CountRatings(Model.Influenter.InfluenterId)</p>

                    <h4 class="text-center">Denne influencer har ingen ekspert feedback.</h4>

                    <a asp-controller="Rating" asp-action="RateInfluencer" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background-color: #08468d ">Giv feedback</a>
                    <a asp-controller="Influencer" asp-action="Read" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background-color:#53b80a">Se feedback</a>

                }

                else
                {
                    <h4 class="text-center">Denne influencer har ingen feedback. Bliv den første</h4>
                    <a asp-controller="Rating" asp-action="RateInfluencer" asp-route-id="@Model.Influenter.InfluenterId" class="a-button-green-100" style="background: #08468d ">Giv feedback</a>
                }



            </div>

            <hr class="hidden-md hidden-lg" />

            <div class="col-md-4 profile-text">
                @if (string.IsNullOrEmpty(Model.ApplicationUser.ProfileText))
                {
                    <h4>Denne influencer har ikke skrevet nogen profil tekst</h4>
                }
                else
                {
                    <p>@Model.ApplicationUser.ProfileText</p>
                }

            </div>

            <hr class="hidden-md hidden-lg" />

            <div class="col-md-4">
                @if (PlatformRepository.GetAllInfluenterPlatformForInfluenter(Model.ApplicationUser.InfluenterId.Value) != null)
                {

                    @foreach (var v in PlatformRepository.GetAllInfluenterPlatformForInfluenter(Model.ApplicationUser.InfluenterId.Value))
                    {
                        <div class="social-box">
                            @if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "Facebook")
                            {
                                <a href="http://www.facebook.com/@v.Link" target="_blank" class="fa fa-profile fa-facebook fa-facebook-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "YouTube")
                            {
                                <a href="http://www.youtube.com/user/@v.Link" target="_blank" class="fa fa-profile fa-youtube fa-youtube-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "SnapChat")
                            {
                                <a href="http://www.snapchat.com/add/@v.Link" target="_blank" class="fa fa-profile fa-snapchat-ghost fa-snapchat-ghost-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "Instagram")
                            {
                                <a href="http://www.instagram.com/@v.Link" target="_blank" class="fa fa-profile fa-instagram fa-instagram-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "Twitter")
                            {
                                <a href="http://www.twitter.com/@v.Link" target="_blank" class="fa fa-profile fa-twitter fa-twitter-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "Twitch")
                            {
                                <a href="http://www.twitch.tv/@v.Link" target="_blank" class="fa fa-profile fa-twitch fa-twitch-profile"></a>
                                <span>@PlatformRepository.Get(v.PlatformId).PlatformNavn</span>
                            }
                            else if (PlatformRepository.Get(v.PlatformId).PlatformNavn == "Website")
                            {
                                <a href="http://@v.Link" target="_blank" class="fa fa-profile fa-globe fa-globe-profile"></a>
                                <span>Personlig hjemmeside</span>
                            }
                        </div>
                    }
                }
                else
                {
                    <h4>Denne influencer har ikke tilknyttet nogle sociale medier</h4>
                }

            </div>
        </div>
    </div>
</div>