@model RateBlog.Models.InfluenterViewModels.CreateViewModel
@{
    ViewData["Title"] = "Opret ny influencer";
}



@if (TempData["Error"] != null)
{
    <div id="CreateErr" class="alert fade in alert-danger alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Error"]
    </div>

    <script>
        window.setTimeout(function () {
            $("#CreateErr").fadeOut(1000);
        }, 2000);
    </script>
}

<div style="min-height: 100vh; background-color: #fafafa">
    <div class="navbar-allaround"></div>

    <div class="container influencer-create">
        <div class="col-md-offset-3 col-md-6 nopaddingmobile">
            <div class="profile-box">
                <h2>Opret en influencer</h2>
                <hr />
                <form asp-controller="Influencer" asp-action="Create" method="post" enctype="multipart/form-data">
                    <p>Alias:</p>
                    <span asp-validation-for="@Model.Influenter.Alias" class="text-danger"></span>
                    <input autocomplete="off" class="influencer-create-input" asp-for="@Model.Influenter.Alias" style="font-size: 14px" />

                    <p>Billede af influenceren:</p>
                    <input type="file" name="ProfilePic" asp-for="@Model.ProfilePic" />

                    <hr />

                    <p>Vælg mindst en kategori, som passer til influenceren:</p>
                    <br />


                    <div style="display: block; width: 100%">

                        @for (int i = 0; i < Model.IKList.Count; i++)
                        {
                            <div class="tooltips">
                                <div class="cat-check @Model.IKList[i].KategoriNavn">
                                    <input asp-for="@Model.IKList[i].IsSelected" type="checkbox" id="@Model.IKList[i].KategoriNavn" /> <label for="@Model.IKList[i].KategoriNavn"></label>
                                </div>
                                <span style="bottom: 115%; left: 25px" class="tooltiptext">@Model.IKList[i].KategoriNavn</span>
                            </div>
                            @Html.HiddenFor(x => x.IKList[i].KategoriNavn)
                        }

                        
                    </div>
                    <p>Referer til mindst et socialt medie:</p>
                    <br />     

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editInstagram" asp-for="@Model.InstagramLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Instagram navn på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editInstagramText"><b>www.instagram.com/</b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editSnapchat" asp-for="@Model.SnapchatLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="SnapChat navn på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editSnapchatText"><b>www.snapchat.com/add/</b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editTwitter" asp-for="@Model.TwitterLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Twitter navn på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editTwitterText"><b>www.twitter.com/</b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editFacebook" asp-for="@Model.FacebookLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Facebook link på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editFacebookText"><b></b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editYoutube" asp-for="@Model.YoutubeLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Youtube link på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editYoutubeText"><b></b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editTwitch" asp-for="@Model.TwitchLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Twitch link på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editTwitchText"><b></b></span>
                    </span>
                    <br /><br />

                    <span>
                        <input autocomplete="off" class="create-profile-input" id="editWebsite" asp-for="@Model.WebsiteLink" style="font-size: 14px; margin-bottom: 5px" type="text" placeholder="Hjemmeside/blog link på influencer" />
                        <span style="margin-left: 4px;" class="inside-span" id="editWebsiteText"></span>
                    </span>

                    <p>Influencerens profil tekst:</p>
                    <textarea asp-for="@Model.ProfileText" placeholder="F.eks. Homer Simpsons er en mand, som altid roder sig ud i problemer. Han laver underholdning på højt plan og er super sjov at følge."></textarea>
                    <br />
                    <br />

                    <input type="submit" class="edit-button-influ-create" style="width: 100%" value="Opret influencer" />
                </form>
            </div>
        </div>
    </div>
</div>





