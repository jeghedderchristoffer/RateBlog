@inject UserManager<ApplicationUser> UserManager
@model RateBlog.Models.AdminViewModels.SeFeedbackViewModel


@{
    ViewData["Title"] = "Se mere om brugeren";

}

<div class="navbar-allaround">
</div>

@Html.HiddenFor(x => x.ApplicationUser.Id)

<table class="table table-bordered">

    <thead>
        <tr>
            <th colspan="1"></th>
            <th style="text-align:center" colspan="2">Profil</th>
            <th style="text-align:center" colspan="1">Platform</th>
            <th style="text-align:center" colspan="4">Rating</th>
            <th style="text-align:center" colspan="2">Feedbak</th>
            <th style="text-align:center">Anb</th>
        </tr>

        <tr style="text-align:center;">
            <th>Feedback ID</th>
            <th>Bruger</th>
            <th>Influencer</th>
            <th>Masser af iconer

            <th>Tro</th>
            <th>Opf</th>
            <th>Kva</th>
            <th>Int</th>
            <th>Posetiv</th>
            <th>Negativ</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.ListRating)
            {
            <tr style="max-width: 100px;">
                <th>Information</th>


                <td href="#" data-toggle="tooltip" title="@Model.ApplicationUser.Email" style="max-width: 100px;overflow: hidden;">
                    @Model.ApplicationUser.Name
                    <br />
                    @Model.ApplicationUser.Email
                </td>
                


                <td href="#" data-toggle="tooltip" title="Information her weee" style="max-width: 100px;overflow: hidden;">

                    <br />

                    <input asp-for="@Model.Influenter.Email"></input>
                </td>
                <td style="text-align:left;max-width:50px">

                    @if (@m.BasedOnFacebook == true)
                    {
                        <form asp-action="SeFeedBack" asp-route-id="@m.BasedOnFacebook" method="get">
                            <button id="buttonFacebook" onclick="changeColorFacebook()" style="background: #0000FF;"> <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i> </button>
                        </form>
                       

                    }
                    else
                    {
                        <button id="buttonFacebook" onclick="changeColorFacebook()" style="background:none;">  <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i> </button>


                    }
                                        @*

        <form asp-action="SeFeedBack" asp-route-id="@user.Id" method="get">
                <input rel="stylesheet" style="float:left;margin-right:5px;" type="submit" value="Feedback" />
            </form>

                                        *@

                    @if (@m.BasedOnInstagram == true)
                    {

                        <button id="buttonInstagram" onclick="changeColorInstagram()" style="background:##FF8C00;"> <i class="fa fa-instagram fa-2x" aria-hidden="true"> </i></button>

                    }
                    else
                    {
                        <button id="buttonInstagram" onclick="changeColorInstagram()" style="background:none;"> <i class="fa fa-instagram fa-2x" aria-hidden="true"></i></button>


                    }


                    @if (@m.BasedOnSnapchat == true)
                    {

                        <button id="buttonSnapChat" onclick="changeColorSnapChat()" style="background:#FFFF00"> <i class="fa fa-snapchat-square fa-2x" aria-hidden="true"></i></button>

                    }
                    else
                    {

                        <button id="buttonSnapChat" onclick="changeColorSnapChat()" style="background:none;"> <i class="fa fa-snapchat-square fa-2x" aria-hidden="true"></i></button>

                    }
                    @if (@m.BasedOnYoutube == true)
                    {

                        <button id="buttonYoutube" onclick="changeColorYoutube()" style="background:#FF0000;"> <i class="fa fa-youtube-square fa-2x" aria-hidden="true"></i></button>

                    }
                    else
                    {

                        <button id="buttonYoutube" onclick="changeColorYoutube()" style="background:none;"> <i class="fa fa-youtube-square fa-2x" aria-hidden="true"></i></button>

                    }

                    <br />
                    @if (@m.BasedOnTwitch == true)
                    {
                        <button id="buttonTwitch" onclick="changeColorTwitch()" style="background:#800080;"> <i class="fa fa-twitch fa-2x" aria-hidden="true"></i></button>

                    }
                    else
                    {
                        <button id="buttonTwitch" onclick="changeColorTwitch()" style="background:none;"> <i class="fa fa-twitch fa-2x" aria-hidden="true"></i></button>

                    }
                    @if (@m.BasedOnWebsite == true)
                    {
                        <button id="buttonBlog" onclick="changeColorBlog()" style="background:#800080;"> <i class="fa fa-twitch fa-2x" aria-hidden="true"></i></button>

                    }
                    else
                    {
                        <button id="buttonBlog" onclick="changeColorBlog()" style="background:none;"> <i class="fa fa-rss-square fa-2x" aria-hidden="true"></i></button>
                    }
                    @if (@m.BasedOnTwitter == true)
                    {
                        <button id="buttonTwitter" onclick="changeColorTwitter()" style="background:#87CEFA;"> <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i></button>

                    }
                    else
                    {
                        <button id="buttonTwitter" onclick="changeColorTwitter()" style="background:none;"> <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i></button>
                    }








                <td><input type="text" style="width:20px" value="@m.Troværdighed" /></td>
                <td><input type="text" style="width:20px" value="@m.Opførsel" /></td>
                <td><input type="text" style="width:20px" value="@m.Kvalitet" /></td>
                <td><input type="text" style="width:20px" value="@m.Interaktion" /></td>


                <td style="max-width: 150px; ">@m.FeedbackGood </td>

                <td style="max-width: 150px;"> @m.FeedbackBetter </td>


                <td><input type="text" style="width:20px" value="@m.Anbefaling" /></td>


                <td>
                    <form method="post" asp-controller="Admin" asp-action="EditUser">
                        <button class="btn btn-default" type="submit" style="background-color:#5F9EA0;"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                    </form>
                    <a asp-ction="RedigereFeedback" asp-route-id="m.Id">  </a>
                    <br />
                    <form method="post" asp-action="DeleteFeedback" asp-controller="Admin" asp-route-id="@m.Id">
                        <button class="btn btn-default" type="submit" style="background-color:#990000"> <i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form>
                </td>



            </tr>
        }
    </tbody>

</table>

<script>

    document.getElementById('change').onclick = changeColor;

    function changeColorFacebook() {


        if (document.getElementById("button").style.backgroundColor = '#0000FF' == '#0000FF' ) {
            document.getElementById("buttonFacebook").style.backgroundColor = '#808080';
        }

        else {
            document.getElementById("buttonFacebook").style.backgroundColor = '#0000FF';
        }
        return false;
    }


    function changeColorTwitter() {

        document.getElementById("buttonTwitter").style.backgroundColor = '#87CEFA';

        return false;
    }


    function changeColorYoutube() {

        document.getElementById("buttonYoutube").style.backgroundColor = '#FF0000';

        return false;
    }



    function changeColorTwitch() {

        document.getElementById("buttonTwitch").style.backgroundColor = '#800080';

        return false;
    }


    function changeColorSnapChat() {

        document.getElementById("buttonSnapChat").style.backgroundColor = '	#FFFF00';

        return false;
    }
    function changeColorInstagram() {

        document.getElementById("buttonInstagram").style.backgroundColor = '#FF8C00';

        return false;
    }
    function changeColorBlog() {

        document.getElementById("buttonBlog").style.backgroundColor = '#000000';

        return false;
    }

</script>