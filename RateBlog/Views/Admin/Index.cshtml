@model RateBlog.Models.AdminViewModels.IndexViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Forside";
}


<div class="navbar-allaround">

</div>
    <div class="container">
        <div class="">
            <div class="outer">
                <div class="middle">
                    <div class="inner">
                        <h2>Søg på alle brugere</h2>

                        <form method="get" asp-area="" asp-controller="Admin" asp-action="Index">
                            <input type="text" name="searchString" id="searchString" class="search-input" style="border: solid 1px" placeholder="F.eks. ud fra navn eller platform" />
                            <span>
                                <input class="search-button" type="submit" value="Søg" />
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-striped">
            <thread>
               <tr>
                   <th>
                       <p>navn</p>

                   </th>
                   <th>
                       <p>email</p>

                   </th>
                   <th>
                       <p>Influenter</p>

                   </th>
                   <th>
                       <p>    
                    Se mere
                       </p>

                   </th>
               </tr>
            </thread>
            <tbody>

                    @foreach (var user in Model.InfluentList)
                    {
                        <tr>
                            <td>
                                <p>@user.Name</p>
                            </td>
                            <td>
                                <p>@user.Email</p>
                            </td>
                            <td>
                                <p>@user.InfluenterId</p>
                            </td>
                            <td>
                                <form asp-controller="Admin" asp-action="SeMere" asp-route-id="@user.Id" method="get" >
                                    <a class="col-md-offset-3 col-md-6 col-xs-12">
                                        <input type="submit"  style="margin-bottom: 20px" class="edit-button" value="Se mere" />
                                    </a>  
                                   </form>
                                <form asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" method="get">
                                    <a class="col-md-offset-3 col-md-6 col-xs-12">
                                        <input type="submit" style="margin-bottom: 20px" class="edit-button" value="Redigere brugeren" />
                                    </a>
                                </form>
                                <form asp-controller="Admin" asp-action="SeFeedBack" asp-route-id="@user.InfluenterId" method="get" >
                                    <a class="col-md-offset-3 col-md-6 col-xs-12">
                                        <input type="submit" style="margin-bottom: 20px" class="edit-button" value="SeFeedback" />
                                    </a>
                                </form>
                                                            
                            </td>
                        </tr>
                        }
            </tbody>
        </table>

    </div>
