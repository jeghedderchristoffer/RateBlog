@inject Bestfluence.Services.Interfaces.IBlogService BlogService

<footer>
    <div class="container">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="col-md-3 col-sm-3">
                <p><b>OM BESTFLUENCE</b></p>
                <ul>
                    <li><a asp-controller="Home" asp-action="About">Om Bestfluence</a></li>
                    <li><a asp-controller="Home" asp-action="Parents">Forældre</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Kontakt os</a></li>
                </ul>
            </div>

            <div class="col-md-3 col-sm-3">
                <p><b>FØLGERE & INFLUENCERE</b></p>
                <ul>
                    <li><a asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                    <li><a asp-controller="Home" asp-action="FeedbackAndAnswers">Feedback & Svar</a></li>
                </ul>
            </div>

            <div class="col-md-3 col-sm-3">
                <p><b>ANDET</b></p>
                <ul>
                    <li><a asp-controller="Home" asp-action="TermsAndConditions">Vilkår og betingelser</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Persondatapolitik</a></li>
                    <li><a asp-controller="Home" asp-action="UserGuidelines">Retningslinjer for brugere</a></li>
                </ul>
            </div>

            <div class="col-md-3 col-sm-3">
                <p><b>NYESTE ARTIKLER</b></p>
                <ul>
                    @foreach (var v in BlogService.GetLast4BlogArticle())
                    {
                        @if (string.IsNullOrEmpty(v.Url))
                        {
                            <li><a asp-controller="Blog" asp-action="Article" asp-route-id="@v.Id">@v.Title</a></li>
                        }
                        else
                        {
                            <li><a href="/Blog/@v.Url">@v.Title</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="col-md-12 col-sm-12">
                <hr style="border-color: #666666" />
                <span>&#169; Bestfluence | @DateTime.Now.Year</span>
                <a class="social-footer" href="https://www.linkedin.com/company/bestfluence" target="_blank"><i class="fa fa-linkedin-square" aria-hidden="true"></i></a>
                <a class="social-footer" href="https://www.facebook.com/Bestfluence/" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i></a>
                <a class="social-footer" href="https://www.instagram.com/bestfluence" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <br />
                <span class="small-footer-text">Icons made by <a href="http://www.roundicons.com" style="color: #fff; text-decoration: none">Roundicons</a> from <a href="http://www.flaticon.com" style="color: #fff; text-decoration: none">www.flaticon.com</a></span>
            </div>


        </div>
    </div>
</footer>