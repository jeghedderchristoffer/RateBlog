@model RateBlog.Models.FooterViewModels.ContactViewModel
@{
    ViewData["Title"] = "Kontakt";
}

@if (TempData["Success"] != null)
{
    <div id="contact" class="alert fade in alert-success alert-dismissable alert-mobile" style="margin-top: 82px; position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Success"]
    </div>

    <script>
        window.setTimeout(function () {
            $("#contact").fadeOut(1000);
        }, 2000);
    </script>
}

<div class="footerkontakt-img">
    <div class="outer">
        <div class="middle">
            <div class="inner">
                <h1>Brug for hjælp?</h1>
            </div>
        </div>
    </div>
</div>




<div class="container">
    <div class="col-md-12 omBestfluence noPadding">
        <div class="outer">
            <div class="middle">
                <div class="inner">
                    <h1>Kontakt Bestfluence</h1>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-xs-12 noPadding">
            <div class="footer-text">
                <p style="text-align:center;">
                    Hos Bestfluence tager vi altid glædeligt imod ris og ros fra vores brugere og du du er derfor altid velkommen at kontakte os. Vi vil også meget gerne hjælpe dig hvad enten det er hardcore tekniske- eller helt basale spørgsmål og vi forsøger altid at vende tilbage 24 timer efter din henvendelse.
                </p>
            </div>

            <div class="col-md-offset-3 col-md-6 col-xs-12 noPadding ">
                <div class="outer">
                    <div class="middle">
                        <div class="inner">
                            <h2 style="padding-bottom:0px;">Udfyld formularen</h2>
                            <h3>Så vender vi tilbage på mail hurtigst muligt!</h3>

                        </div>
                    </div>
                </div>
                <form asp-controller="Footer" asp-action="Contact" method="post">
                    <input asp-for="@Model.Name" class="kontaktMail" placeholder="Navn" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                    <input asp-for="@Model.Email" class="kontaktMail" placeholder="Email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                    <input asp-for="@Model.Title" class="kontaktMail" placeholder="Emne" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>

                    <textarea asp-for="@Model.Text" class="kontaktMailtext" rows="8"></textarea>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>

                    <input type="submit" class="mail-button" value="Send mail" />
                </form>

            </div>
        </div>
    </div>
</div>



<br /><br /><br />
<br /><br /><br />


@Html.Partial("_FooterPartial")