@model RateBlog.Models.BlogViewModel.BlogViewModel

@{
    ViewData["Title"] = "Blog Index";

}
<div class="navbar-allaround">

</div>
<div style="background:#f2f1ed;min-height:4000px;">

    <div class="container">
        <h1 class="blog-title">Blog</h1>
        <hr style="color="black" />

         @*  Ikke nødvendig med søge function endnu, den er der i tilfælde det skulle blive relevant.    *@
