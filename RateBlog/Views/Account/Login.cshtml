@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="navbar-allaround"></div>

<div class="container">

    <div class="col-md-offset-3 col-md-6">
        @if (ViewData["ReturnUrl"] != null)
        {
            <h2>Du skal logge ind</h2>
        }
        else
        {
            <h2>Log in</h2>
        }

        <br />
        <span id="errorMsgTop1" style="color: red"></span>
        @Html.AntiForgeryToken()
        <input id="email1" type="email" class="text-input" placeholder="Email" />
        <span id="errorMsgBot1" style="color: red"></span>
        <input id="password1" class="text-input" placeholder="Kodeord" type="password" />
        <input type="submit" class="login-button" id="loginBtn1" value="Log på" />
        <div class="divider">
            <h4><span>ELLER LOGIN MED</span></h4>
        </div>
        <a class="btn btn-block btn-social btn-facebook btn-lg">
            <span class="fa fa-facebook"></span> Facebook
        </a>
        <a class="btn btn-block btn-social btn-google btn-lg">
            <span class="fa fa-google"></span> Google
        </a>
        <a href="/Account/ForgotPassword" class="text-center" style="cursor: pointer;"><p style="margin-top: 20px; color: #000">Har du glemt kodeord?</p></a>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
