@model RegisterConfirmationViewModel
@{
    ViewData["Title"] = "Bekræft din konto";
}

<div class="navbar-allaround"></div>

<div class="container">
    <div class="col-md-offset-3 col-md-6" style="padding-bottom: 100px;">
        <form asp-controller="Account" asp-action="RegisterConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h2 class="text-center">Opret din profil</h2>
            <hr />
            <div class="no-list-style">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <p style="margin-top: 20px;"> Navn </p>
            <input asp-for="@Model.Name" class="create-profile-input" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>


            <p style="margin-top: 20px;">Email</p>
            <input asp-for="@Model.Email" class="create-profile-input" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

            <p style="margin-top: 20px;">Fødselsdag</p>
            <input asp-for="@Model.Birthday" class="create-profile-input" type="date"/>
            <span asp-validation-for="@Model.Birthday" class="text-danger"></span>

            <p style="margin-top: 20px;">Postnummer</p>
            <input asp-for="@Model.Postnummer" class="create-profile-input" placeholder="I hvilket postnummer bor du?" />
            <span asp-validation-for="@Model.Postnummer" class="text-danger"></span>

            <p style="margin-top: 20px;">Kodeord</p>
            <input asp-for="@Model.Password" class="create-profile-input" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

            <p style="margin-top: 20px;">Gentag kodeord</p>
            <input asp-for="@Model.ConfirmPassword" class="create-profile-input" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

            <p style="margin-top: 20px;">Køn</p>
            <label>
                <input asp-for="@Model.Gender" class="w3-radio" type="radio" name="gender" value="male">
                Mand
            </label>
            <br />

            <label>
                <input asp-for="@Model.Gender" class="w3-radio" type="radio" name="gender" value="female">
                Kvinde
            </label>
            <br />
            <span asp-validation-for="@Model.Gender" class="text-danger"></span>

            <br />
            <label style="font-weight: normal;">
                <input class="w3-radio" type="checkbox" asp-for="@Model.AcceptTermsAndConditions" value="true">
                Jeg godkender Bestfluences <a asp-controller="Footer" asp-action="TermsAndConditions">Vilkår & Betingelser</a> og <a asp-controller="Footer" asp-action="Privacy">Persondatapolitik</a>.
            </label> 
            <label style="font-weight: normal;">
                <input class="w3-radio" type="checkbox" asp-for="@Model.NewLetter">
                Tilmeld Bestfluences nyhedsbrev
            </label>
            <br />
            <span asp-validation-for="@Model.AcceptTermsAndConditions" class="text-danger"></span>

            <button type="submit" class="edit-button-influ-create" style="width: 100%; margin-top: 40px">Opret profil</button>

        </form>
    </div>

</div>