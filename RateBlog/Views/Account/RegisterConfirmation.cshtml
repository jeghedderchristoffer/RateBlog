@model RegisterConfirmationViewModel
@{
    ViewData["Title"] = "Bekræft din konto";
}

<div class="background-all">

    <div class="navbar-allaround"></div>

    <div class="container">
        <div class="col-md-12 noPadding" style="padding-top: 40px;">
            <div class="col-md-offset-3 col-md-6 nopaddingmobile">
                <div class="col-md-12 col-sm-12 col-xs-12 white-box create-container">
                    <h2>Du er næsten klar...</h2>

                    <form asp-controller="Account" asp-action="RegisterConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <p>Profiltype</p>

                        <div class="col-md-6 col-sm-6 col-xs-12 noPaddingLeft nopaddingmobile">
                            <input type="radio" name="isInfluencer" id="radio1" class="radio" value="true" />
                            <label for="radio1">Influencer</label>
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12 noPaddingRight nopaddingmobile">
                            <input type="radio" name="isInfluencer" id="radio2" class="radio" value="false" />
                            <label for="radio2">Følger</label>
                        </div>


                        <div class="col-md-12 col-sm-12 col-xs-12 noPadding">
                            <div class="no-list-style">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>


                            <p>Navn</p>
                            <input asp-for="@Model.Name" placeholder="Hvad hedder du?" />

                            <p>Email</p>
                            <input asp-for="@Model.Email" placeholder="Hvor kan vi kontakte dig?" type="text" />

                            <p>Fødselsdato?</p>
                            <input asp-for="@Model.Birthday" placeholder="DD-MM-YYYY" type="text" />

                            <p>Postnummer</p>
                            <input asp-for="@Model.Postnummer" placeholder="Hvilken by bor du i?" type="text" />

                            <p>Adgangskode</p>
                            <input asp-for="@Model.Password" placeholder="Minimum 6 tegn" />

                            <p>Gentag adgangskode</p>
                            <input asp-for="@Model.ConfirmPassword" />

                            <p>Køn</p>
                            <div class="control-group">
                                <label class="control control-radio">
                                    Mand
                                    <input type="radio" name="gender" asp-for="@Model.Gender" value="male" />
                                    <div class="control_indicator"></div>
                                </label>
                                <label class="control control-radio">
                                    Kvinde
                                    <input type="radio" name="gender" asp-for="@Model.Gender" value="female" />
                                    <div class="control_indicator"></div>
                                </label>
                            </div>

                            <p>Betingelser</p>
                            <label class="control control-radio">
                                Jeg godkender Bestfluences <a asp-controller="Home" asp-action="TermsAndConditions" target="_blank">Vilkår & Betingelser</a> og <a asp-controller="Home" asp-action="Privacy" target="_blank">Persondatapolitik</a>.
                                <input type="checkbox" name="accept" asp-for="@Model.AcceptTermsAndConditions" value="true" />
                                <div class="control_indicator" style="border-radius: unset"></div>
                            </label>
                            <label class="control control-radio">
                                Tilmeld nyhedsbrev og bliv inspireret (kan afmeldes med et klik)
                                <input type="checkbox" name="accept" asp-for="@Model.NewLetter" />
                                <div class="control_indicator" style="border-radius: unset"></div>
                            </label>

                            <button id="createuser" type="submit" style="width: 100%; margin-top: 40px">Opret profil</button>

                        </div>


                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
