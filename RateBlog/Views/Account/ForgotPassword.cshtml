@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="navbar-allaround"></div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
        <h2 class="text-center">Glemt dit kodeord?</h2>
        <hr />
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
            <input asp-for="@Model.Email" id="email" type="email" class="text-input" placeholder="Hvad er din email?" />
            <input style="margin-bottom: 10px" type="submit" class="login-button" value="Nulstil kodeord" />
        </form>
    </div>
    

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
