@model Bestfluence.Models.FooterViewModels.ContactViewModel
@{
    ViewData["Title"] = "Kontakt os";
}
@section metatags{
    <meta name="description" content="Har du spørgsmål, kommentarer eller feedback til os, er du altid velkommen til at kontakte os.">
}

@if (TempData["Success"] != null)
{
    <div id="contact" class="alert fade in alert-success alert-dismissable alert-mobile" style="margin-top: 82px; position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Success"]
    </div>

    <script>
        window.setTimeout(function () {
            $("#contact").fadeOut(1000);
        }, 2000);
    </script>
}

<div class="footer-img contact">
    <div class="outer">
        <div class="middle">
            <div class="inner">
                <h1>Brug for hjælp?</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-12 footer-text">
        <h1>Kontakt os</h1>

        <p style="text-align:center;">
            Hos Bestfluence tager vi altid glædeligt imod ris og ros fra vores brugere og du du er derfor altid velkommen at kontakte os. Vi vil også meget gerne hjælpe dig hvad enten det er hardcore tekniske- eller helt basale spørgsmål og vi forsøger altid at vende tilbage 24 timer efter din henvendelse.
        </p>

        <div class="col-md-offset-3 col-md-6" style="margin-top: 50px;">
            <form asp-controller="home" asp-action="contact" method="post">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                <input asp-for="@Model.Name" class="contact-input" placeholder="Navn" />

                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <input asp-for="@Model.Email" class="contact-input" placeholder="Email" />             

                <span asp-validation-for="@Model.Title" class="text-danger"></span>
                <input asp-for="@Model.Title" class="contact-input" placeholder="Emne" />               

                <span asp-validation-for="@Model.Text" class="text-danger"></span>
                <textarea asp-for="@Model.Text" class="contact-input" style="height: auto;" rows="8" placeholder="Besked"></textarea>
                

                <input type="submit" class="contact-button" value="Send mail" />
            </form>
        </div>       
    </div>
</div>