@inject RateBlog.Repository.IRatingRepository RatingRepository
@inject RateBlog.Repository.IEkspertRatingRepository EkspertRatingRepository
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Anmeldelser";
    var user = await UserManager.GetUserAsync(User);
}


<div class="navbar-allaround"></div>


@if (TempData["Success"] != null)
{
    <div class="alert fade in alert-success alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert fade in alert-danger alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Error"]
    </div>
}


@Html.Partial("_NavbarAddonPartial")

<div class="bottom-container">

    <div class="container">
        <h2 class="anmeldelser-h2">Anmeldelser</h2>

        @if (user.InfluenterId.HasValue)
        {
            <div class="col-xs-12 visible-xs padding-anmeldelser-responsive ">
                <div class="col-md-4 padding-anmeldelser-responsive">
                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item">
                            <h3 class="text-center">Fan rating</h3>
                            <div class="star-rating-feedback-all">
                                <div class="back-stars" title="@Math.Round(RatingRepository.GetRatingAverage(user.InfluenterId.Value), 2)%">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <div class="front-stars" style="width: @RatingRepository.GetRatingAverage(user.InfluenterId.Value)%">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item" style="border: none">
                            <h3 class="text-center">Ekspert rating</h3>
                            <div class="star-rating-feedback-all">
                                <div class="back-stars" title="@Math.Round(EkspertRatingRepository.GetEkspertRatingAverage(user.InfluenterId.Value), 2)%">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <div class="front-stars" style="width: @EkspertRatingRepository.GetEkspertRatingAverage(user.InfluenterId.Value)%">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <hr />
                </div>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-12 noPadding">
                <div class="col-md-8 col-xs-12 col-sm-8 noPadding">
                    @if (user.InfluenterId.HasValue)
                    {
                        @if (RatingRepository.GetRatingForInfluenter(user.InfluenterId.Value).Count != 0)
                        {
                            @foreach (var v in RatingRepository.GetRatingForInfluenter(user.InfluenterId.Value).OrderByDescending(x => x.RateDateTime))
                            {
                                var read = (v.IsRead == true) ? "active" : "" ?? "Nej";

                                <form asp-area="" asp-controller="Manage" asp-action="SeAnmeldelse" asp-route-id="@v.RatingId">
                                    <a class="feedback-link" onclick="$(this).closest('form').submit();">
                                        <div class="col-md-12 noPadding feedback-container @read">
                                            <div class="col-md-2 col-sm-2 noPadding">
                                                <img class="center-block" src="@Url.Action("UsersProfilePic", "Manage", new { id = v.ApplicationUserId })" />
                                            </div>
                                            <div class="col-md-4 col-sm-12 visible-xs" style="height: 100%">
                                                <div class="star-rating-feedback mobile-star-feedback" style="margin-top: 10px; margin-bottom: 10px;">
                                                    <div class="back-stars" title="@Math.Round(RatingRepository.GetSingleRatingAverage(v.RatingId), 2)% ">
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>

                                                        <div class="front-stars" style="width: @RatingRepository.GetSingleRatingAverage(v.RatingId)%">
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-8 noPadding padding-anmeldelser">
                                                <p>Du er blevet anmeldt af @UserManager.Users.SingleOrDefault(x => x.Id == v.ApplicationUserId).Name</p>
                                                <p style="color: #989898">@String.Format("{0:dd/MM/yyyy}", v.RateDateTime) </p>
                                            </div>
                                            <div class="col-md-4 col-sm-12 hidden-xs" style="height: 100%">
                                                <div class="star-rating-feedback" style="margin-top: 10px; margin-bottom: 10px;">
                                                    <div class="back-stars" title="@Math.Round(RatingRepository.GetSingleRatingAverage(v.RatingId), 2)% ">
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>

                                                        <div class="front-stars" style="width: @RatingRepository.GetSingleRatingAverage(v.RatingId)%">
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </form>
                            }

                        }
                        else
                        {
                            <p> Du har desværre ingen anmeldelser</p>
                        }
                    }
                </div>
                <div class="col-md-4 col-sm-4 hidden-xs">
                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item">
                            <h3 class="text-center">Fan rating</h3>
                            <div class="star-rating-feedback-all">
                                <div class="back-stars" title="@Math.Round(RatingRepository.GetRatingAverage(user.InfluenterId.Value), 2)%">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <div class="front-stars" style="width: @RatingRepository.GetRatingAverage(user.InfluenterId.Value)%">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item" style="border: none">
                            <h3 class="text-center">Ekspert rating</h3>
                            <div class="star-rating-feedback-all">
                                <div class="back-stars" title="@Math.Round(EkspertRatingRepository.GetEkspertRatingAverage(user.InfluenterId.Value), 2)%">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <div class="front-stars" style="width: @EkspertRatingRepository.GetEkspertRatingAverage(user.InfluenterId.Value)%">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-8 col-sm-12">
                @if (RatingRepository.GetFanRatings(user.Id).Count != 0)
                {
                    @foreach (var v in RatingRepository.GetFanRatings(user.Id).OrderByDescending(x => x.RateDateTime))
                    {
                        <form asp-area="" asp-controller="Manage" asp-action="MinAnmeldelse" asp-route-id="@v.RatingId">
                            <a class="feedback-link" onclick="$(this).closest('form').submit();">
                                <div class="col-md-12 noPadding feedback-container active">
                                    <div class="col-md-2 col-sm-2 noPadding">
                                        <img class="center-block" src="@Url.Action("UsersProfilePic", "Manage", new { id = UserManager.Users.SingleOrDefault(x => x.InfluenterId == v.InfluenterId).Id })" />
                                    </div>
                                    <div class="col-md-4 col-sm-12 visible-xs" style="height: 100%">
                                        <div class="star-rating-feedback mobile-star-feedback" style="margin-top: 10px; margin-bottom: 10px;">
                                            <div class="back-stars" title="@Math.Round(RatingRepository.GetSingleRatingAverage(v.RatingId), 2)% ">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>

                                                <div class="front-stars" style="width: @RatingRepository.GetSingleRatingAverage(v.RatingId)%">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 noPadding padding-anmeldelser">
                                        <p>Du har anmeldt @UserManager.Users.SingleOrDefault(x => x.InfluenterId.Value == v.InfluenterId).Name</p>
                                        <p style="color: #989898">@String.Format("{0:dd/MM/yyyy}", v.RateDateTime) </p>
                                    </div>
                                    <div class="col-md-4 col-sm-4 hidden-xs" style="height: 100%">
                                        <div class="star-rating-feedback" style="margin-top: 10px; margin-bottom: 10px;">
                                            <div class="back-stars" title="@Math.Round(RatingRepository.GetSingleRatingAverage(v.RatingId), 2)% ">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>

                                                <div class="front-stars" style="width: @RatingRepository.GetSingleRatingAverage(v.RatingId)%">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>                           
                        </form>
                    }
                }
                else
                {
                    <p>Du har ikke anmeldt nogle influencers endnu</p>
                }
            </div>
        }
    </div>
</div>
