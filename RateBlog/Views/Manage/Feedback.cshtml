@inject RateBlog.Services.IFeedbackService FeedbackService
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Feedback";
    var user = await UserManager.GetUserAsync(User);
}



<div class="navbar-allaround"></div>


@if (TempData["Success"] != null)
{
    <div id="anmeldelserSuc" class="alert fade in alert-success alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Success"]
    </div>
    <script>
        window.setTimeout(function () {
            $("#anmeldelserSuc").fadeOut(1000);
        }, 2000);
    </script>
}

@if (TempData["Error"] != null)
{
    <div id="anmeldelserErr" class="alert fade in alert-danger alert-dismissable alert-mobile" style="margin-top: 10px;  position: absolute; z-index: 5000; left: 20%; right: 20%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Error"]
    </div>

    <script>
        window.setTimeout(function () {
            $("#anmeldelserErr").fadeOut(1000);
        }, 2000);
    </script>
}


@Html.Partial("_NavbarAddonPartial")

<div onload="closeAfter3Seconds()" class="bottom-container">

    <div class="container">
        <h2 class="anmeldelser-h2">Feedback</h2>

        @if (user.InfluenterId.HasValue)
        {
            <div class="col-xs-12 visible-xs padding-anmeldelser-responsive ">
                <div class="col-md-4 padding-anmeldelser-responsive">
                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item">
                            <h3 class="text-center">Følger rating</h3>
                            <div class="show-rating-box-show">
                                <div class="show-rating-show">
                                    <div class="show-rating-front-show">
                                        @for (int i = 0; i < FeedbackService.GetAverageFeedbackScore(user.InfluenterId.Value); i++)
                                        {
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        }
                                    </div>
                                    <div class="show-rating-back-show">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="text-center" style="margin-top: 20px; margin-bottom: 0">@FeedbackService.GetTotalScore(user.InfluenterId.Value).ToString("0.0") af @FeedbackService.GetInfluencerFeedbackCount(user.InfluenterId.Value) ratings</p>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-12 noPadding">
                <div class="col-md-8 col-xs-12 col-sm-8 noPadding">
                    @if (user.InfluenterId.HasValue)
                    {
                        @if (FeedbackService.GetAllFeedbackByInfluencer(user.InfluenterId.Value).ToList().Count != 0)
                        {
                            @foreach (var v in FeedbackService.GetAllFeedbackByInfluencer(user.InfluenterId.Value).OrderByDescending(x => x.RateDateTime))
                            {
                                <form asp-area="" asp-controller="Manage" asp-action="Answer" asp-route-id="@v.Id">
                                    <a class="feedback-link" onclick="$(this).closest('form').submit();">
                                        <div class="col-md-12 noPadding feedback-container">
                                            <div class="col-md-2 col-sm-2 noPadding">
                                                <img class="center-block" src="@Url.Action("UsersProfilePic", "Manage", new { id = v.ApplicationUserId })" />
                                            </div>
                                            <div class="col-md-4 col-sm-12 visible-xs" style="height: 100%">
                                                <div class="show-rating-box">
                                                    <div class="show-rating">
                                                        <div class="show-rating-front">
                                                            @for (int i = 0; i < FeedbackService.GetSingleFeedbackScoreAverage(v.Id); i++)
                                                            {
                                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                            }
                                                        </div>
                                                        <div class="show-rating-back">
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-8 noPadding padding-anmeldelser">
                                                <p>Du har fået feedback af @UserManager.Users.SingleOrDefault(x => x.Id == v.ApplicationUserId).Name</p>
                                                <p style="color: #989898">
                                                    @String.Format("{0:dd/MM/yyyy}", v.RateDateTime) &ensp;
                                                    @if (!v.IsRead)
                                                    {
                                                        <span class="badge" style="font-family: Arial; background: #FFA500">Ny feedback</span>
                                                    }
                                                    else if (v.IsRead && string.IsNullOrEmpty(v.Answer))
                                                    {
                                                        <span class="badge" style="font-family: Arial;">Læst</span>
                                                    }
                                                    else if (v.IsRead && !string.IsNullOrEmpty(v.Answer))
                                                    {
                                                        <span class="badge" style="font-family: Arial; background: #479b0a">Svaret</span>

                                                    }

                                                </p>
                                            </div>
                                            <div class="col-md-4 col-sm-12 hidden-xs" style="height: 100%">
                                                <div class="show-rating-box">
                                                    <div class="show-rating">
                                                        <div class="show-rating-front">
                                                            @for (int i = 0; i < FeedbackService.GetSingleFeedbackScoreAverage(v.Id); i++)
                                                            {
                                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                            }
                                                        </div>
                                                        <div class="show-rating-back">
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </form>
                            }

                        }
                        else
                        {
                            <p> Du har desværre intet feedback</p>
                        }
                    }
                </div>
                <div class="col-md-4 col-sm-4 hidden-xs">
                    <div class="feedback-rating-all-box">
                        <div class="feedback-rating-all-box-item">
                            <h3 class="text-center">Følger rating</h3>
                            <div class="show-rating-box-show">
                                <div class="show-rating-show">
                                    <div class="show-rating-front-show">
                                        @for (int i = 0; i < FeedbackService.GetAverageFeedbackScore(user.InfluenterId.Value); i++)
                                        {
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        }
                                    </div>
                                    <div class="show-rating-back-show">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="text-center" style="margin-top: 20px; margin-bottom: 0; font-size: 20px">@FeedbackService.GetTotalScore(user.InfluenterId.Value).ToString("0.0") af @FeedbackService.GetInfluencerFeedbackCount(user.InfluenterId.Value) ratings</p>

                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-8 col-sm-12">
                @if (FeedbackService.GetAllFeedbackByUser(user.Id).ToList().Count != 0)
                {
                    @foreach (var v in FeedbackService.GetAllFeedbackByUser(user.Id).OrderByDescending(x => x.RateDateTime))
                    {
                        <form asp-area="" asp-controller="Manage" asp-action="Read" asp-route-id="@v.Id">
                            <a class="feedback-link" onclick="$(this).closest('form').submit();">
                                <div class="col-md-12 noPadding feedback-container active">
                                    <div class="col-md-2 col-sm-2 noPadding">
                                        <img class="center-block" src="@Url.Action("UsersProfilePic", "Manage", new { id = UserManager.Users.SingleOrDefault(x => x.InfluenterId == v.InfluenterId).Id })" />
                                    </div>
                                    <div class="col-md-4 col-sm-12 visible-xs" style="height: 100%">
                                        <div class="show-rating-box">
                                            <div class="show-rating">
                                                <div class="show-rating-front">
                                                    @for (int i = 0; i < FeedbackService.GetSingleFeedbackScoreAverage(v.Id); i++)
                                                    {
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                    }
                                                </div>
                                                <div class="show-rating-back">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-6 col-sm-6 noPadding padding-anmeldelser">
                                        <p>Du har givet feedback til @UserManager.Users.SingleOrDefault(x => x.InfluenterId.Value == v.InfluenterId).Name</p>
                                        <p style="color: #989898">
                                            @String.Format("{0:dd/MM/yyyy}", v.RateDateTime)  &ensp;
                                            @if (!v.IsAnswerRead && !string.IsNullOrEmpty(v.Answer))
                                            {
                                                <span class="badge" style="font-family: Arial; background: #FFA500">Nyt svar</span>
                                            }
                                            else if (!string.IsNullOrEmpty(v.Answer))
                                            {
                                                <span class="badge" style="font-family: Arial; background: #479b0a">Læst</span>
                                            }
                                            else if (string.IsNullOrEmpty(v.Answer))
                                            {
                                                <span class="badge danger" style="font-family: Arial;">Intet svar</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-4 col-sm-4 hidden-xs" style="height: 100%">
                                        <div class="show-rating-box">
                                            <div class="show-rating">
                                                <div class="show-rating-front">
                                                    @for (int i = 0; i < FeedbackService.GetSingleFeedbackScoreAverage(v.Id); i++)
                                                    {
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                    }
                                                </div>
                                                <div class="show-rating-back">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </a>
                        </form>
                    }
                }
                else
                {
                    <p>Du har givet noget feedback endnu</p>
                }
            </div>
            <div class="col-md-4 hidden-xs hidden-sm">
                <div class="feedback-rating-all-box">
                    <div class="feedback-rating-all-box-item" style="padding: 20px;">
                        <h3 class="text-center">Feedback</h3>
                        <p>Efter 24 timer har du muligheden for, at give feedback til en influencer igen. Dette gør, at du altid kan give din mening!</p>
                    </div>
                </div>

                <div class="feedback-rating-all-box">
                    <div class="feedback-rating-all-box-item" style="padding: 20px;">
                        <h3 class="text-center">Influencers</h3>
                        <p>Kan du ikke finde den influencer du ønsker at give feedback til? Du har muligheden for at oprette en influencer, og derefter rate dem!</p>
                        <a asp-controller="Influencer" asp-action="Create" class="a-button" style="float: none; width: 100%; margin-top: 20px; background-color: #FFA500">OPRET INFLUENCER</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<input id="alwaysFetch" type="hidden" />

@section Scripts{
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                var el = document.getElementById('alwaysFetch');
                el.value = el.value ? location.reload() : true;
            }, 0);
        });

    </script>
}