@model FeedbackResponseViewModel
@inject RateBlog.Services.IFeedbackService FeedbackService
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Feedback";
}

<div class="background-all">
    <div class="navbar-allaround"></div>

    <div class="container">
        <div class="col-md-12 noPadding" style="padding-top: 40px;">
            <div class="col-md-offset-2 col-md-8 nopaddingmobile">
                <div class="col-md-12 col-sm-12 col-xs-12 white-box read-feedback-container">
                    <h2>Din feedback fra @Model.Rating.ApplicationUser.Name</h2>
                    <hr />
                    <div class="col-md-6">
                        <p>Troværdighed</p>

                        <div class="show-rating">
                            <div class="show-rating-container center-block" style="width: 164px; float: none;">
                                <div class="show-rating-front">
                                    @for (int i = 0; i < Model.Rating.Troværdighed; i++)
                                    {
                                        <div class="show-rating-box">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        </div>
                                    }
                                </div>
                                <div class="show-rating-back">
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">


                        <p>Opførsel</p>

                        <div class="show-rating">
                            <div class="show-rating-container center-block" style="width: 164px; float: none;">
                                <div class="show-rating-front">
                                    @for (int i = 0; i < Model.Rating.Opførsel; i++)
                                    {
                                        <div class="show-rating-box">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        </div>
                                    }
                                </div>
                                <div class="show-rating-back">
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <p>Kvalitet</p>

                        <div class="show-rating">
                            <div class="show-rating-container center-block" style="width: 164px; float: none;">
                                <div class="show-rating-front">
                                    @for (int i = 0; i < Model.Rating.Kvalitet; i++)
                                    {
                                        <div class="show-rating-box">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        </div>
                                    }
                                </div>
                                <div class="show-rating-back">
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    <div class="show-rating-box">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
